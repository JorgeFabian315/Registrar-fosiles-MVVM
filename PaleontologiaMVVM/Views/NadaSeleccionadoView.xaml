<UserControl x:Class="PaleontologiaMVVM.Views.NadaSeleccionadoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaleontologiaMVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Grid>
        <Image Source="../Assets/selva.jpg"
               Stretch="UniformToFill"
               Grid.ColumnSpan="2"></Image>
        <Border Background="Black"
                Opacity="0.4"></Border>
        <TextBlock FontFamily="../Assets/#Champagne &amp; Limousines"
                   Foreground="White"
                   Text="Selecciona un elemento para ver sus características "
                   TextWrapping="Wrap"
                   FontSize="80"
                   Margin="10,0"
                   TextAlignment="Center"
                   VerticalAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
