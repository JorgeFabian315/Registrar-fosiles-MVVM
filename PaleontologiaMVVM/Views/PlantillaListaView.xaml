<UserControl x:Class="PaleontologiaMVVM.Views.PlantillaListaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaleontologiaMVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="EstiloTitulo" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="EstiloDescripcion" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Margin" Value="20,20,5,0" />
            <Setter Property="TextAlignment" Value="Justify" />
        </Style>
    </UserControl.Resources>
    <Border Background="GhostWhite">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".6*"></ColumnDefinition>
                <ColumnDefinition Width=".4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".2*"></RowDefinition>
                <RowDefinition Height=".8*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="2"
                    Background="#101217"
                    CornerRadius="20,20,0,0"></Border>
            <TextBlock Grid.ColumnSpan="2"
                   Style="{StaticResource EstiloTitulo}"
                   Text="Fosil de T.REX"
                   HorizontalAlignment="Center"></TextBlock>
            <Border Grid.Row="1" 
                    Grid.ColumnSpan="2">
                <Ellipse Grid.Row="1" Grid.ColumnSpan="2"
                     Width="800" 
                     Height="800" 
                     Fill="#05183c"
                     Margin="250,50,0,0"
                     Opacity="0.7"></Ellipse>
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" 
                                         EndPoint="-0.3, 1">
                        <GradientStop Color="#1a3c7d" Offset="0"></GradientStop>
                        <GradientStop Color="#05183c" Offset="1"></GradientStop>
                        
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <TextBlock Grid.Row="1" 
                       Style="{StaticResource EstiloDescripcion}"
                       TextWrapping="Wrap"
                       Text="El Megalosaurus fue el primer fósil encontrado y reconocido por primera vez como un dinosaurio. En 1676, en Inglaterra, se extrajeron de una cantera de caliza los primeros fragmentos de huesos. En un primer lugar, se creyó que los huesos eran de gigantes humanos. No fue hasta 1824, cuando William Buckland tenía en su poder varias vértebras, una mandíbula inferior y otros fragmentos que probablemente no pertenecían al mismo individuo, pero a partir de ahí se consideró que el fósil pertenecía a una especie diferente y se empezaron a denominar a los dinosaurios como tales."></TextBlock>

            <StackPanel Grid.Row="1"
                        Margin="0,20,0,0"
                        Grid.Column="1">
                <Image Width="280" Height="200" 
                       Stretch="Fill"
                    Source="https://www.dinosaurios.info/images/fosil-de-dinosaurio.jpg"
                       >
                    <Image.Effect>
                        <DropShadowEffect BlurRadius="30"
                                          ShadowDepth="1"></DropShadowEffect>
                    </Image.Effect>
                </Image>
                <TextBlock Text="Fecha de descubrimiento."
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           Foreground="White"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"></TextBlock>
            </StackPanel>
           
         
        </Grid>
    </Border>
</UserControl>
